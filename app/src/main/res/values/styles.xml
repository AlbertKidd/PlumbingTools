<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarAppTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="wrap_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="full_line_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_base" parent="wrap_view">
        <item name="android:textSize">@dimen/text_regular_primary_size</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="text_center" parent="text_base">
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_text_50dp" parent="wrap_view">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textSize">@dimen/text_regular_primary_size</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

</resources>
